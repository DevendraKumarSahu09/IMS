#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint

# Run tests
echo "🧪 Running tests..."
npm test

# Format code
echo "💅 Formatting code with Prettier..."
npm run lint:fix

echo "✅ Pre-commit checks passed!"
